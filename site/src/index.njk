      <h2><strong>Blog</strong></h2>
      {% for post in posts %}
        <article>
          <h4><a href="{{ post.path }}">{{ post.title }}</a></h4>
          <time datetime="{{ post.date | dateString }}" title="{{ post.date | dateString }}">
            {{ post.date | localeDateString }}
          </time>
        </article>
      {% endfor %}
    </main>
  </body>
